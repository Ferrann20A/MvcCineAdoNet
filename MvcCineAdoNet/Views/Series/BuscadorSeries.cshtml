@model List<Serie>

<div class="container">
    <h1>Buscador Series</h1>
    <form method="post">
        <input type="text" name="titulo" class="form-contro" />
        <br />
        <button class="btn btn-primary">
            Buscar
        </button>
    </form>
    <br />
    @if (Model != null)
    {
        <ul class="list-group">
            @foreach (Serie serie in Model)
            {
                <li class="list-group-item">
                    @serie.Titulo, Director: @serie.Creador
                </li>
            }
        </ul>
    }
    else
    {
        <ul class="list-group">
            @foreach (Serie serie in Model)
            {
                <li class="list-group-item">
                    @serie.Titulo, Director: @serie.Creador
                </li>
            }
        </ul>
    }
</div>
